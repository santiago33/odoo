<odoo>
    <record id="hr_hospital_patient_wizard_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.wizard.form</field>
        <field name="model">hr.hospital.patient.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="doctor_id"/>
                </group>
                <group>
                    <field name="patient_ids"/>
                </group>
                <footer>
                    <button string="Add Doctor" name="add_doctor" type="object"
                            class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary"
                            special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patient_wizard_action"
            model="ir.actions.act_window">
        <field name="name">Add doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id"
               ref="hr_hospital_patient_wizard_form"/>
        <field name="binding_model_id"
               ref="hr_hospital.model_hr_hospital_patient"/>
        <field name="binding_view_types">list,form</field>

    </record>

</odoo>